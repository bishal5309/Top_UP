<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/ncardBackgroundColor">

        <!-- Top Menu Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="?attr/ncardBackgroundColor"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                app:tint="?attr/customIconTint"
                android:id="@+id/menu_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                android:src="@drawable/menu"
                android:contentDescription="Menu" />

            <TextView
                android:id="@+id/titleText"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textColor="?attr/customTextColor"
                android:textSize="18sp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

            <ImageView
                android:id="@+id/clockIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_clock"
                app:tint="?attr/customIconTint"/>

            <ImageView
                android:id="@+id/refreshIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/refresh"
                app:tint="?attr/customIconTint"/>
        </LinearLayout>

        <!-- Date Range View -->
        <LinearLayout
            android:id="@+id/dateRangeContainer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_date_range"
            android:padding="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock"
                android:layout_marginEnd="6dp"
                app:tint="?attr/customIconTint" />

            <TextView
                android:id="@+id/dateRangeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 August 2025 - 24 August 2025"
                android:textColor="?attr/customTextColor"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/closeDateRange"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_close"
                android:layout_marginStart="8dp"
                app:tint="?attr/customIconTint" />
        </LinearLayout>

        <!-- TabLayout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/ncardBackgroundColor"
            app:tabIndicatorColor="#284E72"
            app:tabSelectedTextColor="?attr/customTextColor"
            app:tabTextColor="?attr/customTextColor5"
            app:tabIndicatorHeight="3dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:layout_constraintTop_toBottomOf="@id/dateRangeContainer"/>

        <!-- ViewPager2 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemTextColor="@color/nav_item_color"
        app:itemIconTint="@color/nav_item_color"
        app:itemBackground="@drawable/nav_item_background"
        android:background="?attr/cardBackgroundColor"/>
</androidx.drawerlayout.widget.DrawerLayout>