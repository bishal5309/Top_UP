<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="?attr/cardBackgroundColor"
    android:orientation="vertical">


    <ImageView
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ticket"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:layout_gravity="center_horizontal"
        android:textColor="?attr/customTextColor"
        android:textStyle="bold"
        android:textSize="35sp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill out the following fields to log in"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="?attr/customTextColor5"
        />


    <EditText
        android:id="@+id/csid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/customTextColor"
        android:layout_marginTop="35dp"
        android:layout_marginStart="7dp"
        android:textColorHint="#CDCBCB"
        android:backgroundTint="#CDCBCB"
        android:paddingBottom="25dp"
        android:layout_marginEnd="7dp"
        android:hint="User ID"/>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/password"
        android:textColor="?attr/customTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:textColorHint="#CDCBCB"
        android:backgroundTint="#CDCBCB"
        android:paddingBottom="25dp"
        android:hint="Password"/>

    <EditText
        android:layout_marginTop="10dp"
        android:textColor="?attr/customTextColor"
        android:id="@+id/workplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:textColorHint="#CDCBCB"
        android:backgroundTint="#CDCBCB"
        android:paddingBottom="25dp"
        android:hint="Workplace code"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBoxRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:buttonTint="@color/myblue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REMEMBER  PASSWORD"
            android:textSize="13sp"
            android:textColor="?attr/customTextColor"
            android:layout_gravity="center_vertical"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/login"
        android:backgroundTint="?attr/btn"
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <TextView
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="Log in"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/version"
        android:layout_margin="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="?attr/customTextColor"
        android:text="Version: 53"/>
</LinearLayout>