<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:background="?attr/cardBackgroundColor"
    android:layout_height="match_parent"
    tools:context=".home_page">






    <!-- Main content -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/cardBackgroundColor">


        <!-- Header bar -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bottom_rounded">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            app:tint="?attr/customIconTint"
                            android:id="@+id/menu_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/menu"
                            android:contentDescription="Menu" />

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My account"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/customTextColor" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="?attr/customTextColor"
                            android:text="EPOS: 1288871"
                            android:layout_weight="0.5" />
                        <TextView
                            android:textColor="?attr/customTextColor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Limit"
                            android:gravity="end"
                            android:layout_weight="0.5" />
                    </LinearLayout>

                    <!-- Content Area (Your cards and info go here) -->
                    <!-- Example: Progress and Balance Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="?attr/cardBackgroundColor2"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:backgroundTint="?attr/cardBackgroundColor3"
                                    app:cardCornerRadius="10dp">

                                    <ImageButton
                                        android:id="@+id/btnRefresh"
                                        android:layout_margin="3dp"
                                        android:layout_width="28dp"
                                        android:scaleType="centerCrop"
                                        android:layout_height="28dp"
                                        app:tint="?attr/customIconTint"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/refresh"
                                        android:contentDescription="Refresh"/>
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_alignParentEnd="true">

                                    <TextView
                                        android:textColor="?attr/customTextColor"
                                        android:id="@+id/tvAmount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.00 ৳"
                                        android:textSize="16sp"
                                         />

                                    <TextView
                                        android:id="@+id/tvCurrency"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="BDT (৳)"
                                        android:textSize="12sp"
                                        android:textColor="?attr/customTextColor" />
                                </LinearLayout>
                            </RelativeLayout>

                            <FrameLayout
                                android:id="@+id/progressContainer"
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/progress_rounded">

                                <View
                                    android:id="@+id/whiteOverlay"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/white_rounded" />
                            </FrameLayout>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="?attr/customTextColor"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:textColor="?attr/customTextColor2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bangladesh, Bogra, Mubasshira Computer22"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <!-- Topup button with separate icon -->
            <LinearLayout
                android:id="@+id/btn_top_up"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/rounded_button_green"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cashin"
                    android:contentDescription="Topup icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Topup account"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="5dp"
                    android:textAllCaps="false"
                    android:textSize="12sp"/>
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <!-- Withdraw button with separate icon -->
            <LinearLayout
                android:id="@+id/btn_withdraw"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/rounded_button_blue"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cashout"
                    android:contentDescription="Withdraw icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Withdraw funds"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="5dp"
                    android:textAllCaps="false"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:id="@+id/exit"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/customButtonColor"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/exit"
                    app:tint="?attr/customIconTint" />

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="?attr/customTextColor"
                    android:text="Exit"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Bottom Curved FrameLayout -->
            <FrameLayout
                android:id="@+id/bottomCurved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/card_top_rounded"
                android:elevation="12dp">

                <TextView
                    android:layout_margin="10dp"
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance: 19,202.27 ৳"
                    android:textColor="?attr/customTextColor"
                    android:textSize="14sp"
                    />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Navigation Drawer Menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemTextColor="@color/nav_item_color"
        app:itemIconTint="@color/nav_item_color"
        app:itemBackground="@drawable/nav_item_background"
        android:background="?attr/cardBackgroundColor"
        />



</androidx.drawerlayout.widget.DrawerLayout>