<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:fitsSystemWindows="true"
    android:paddingBottom="10dp">

    <!-- Top bar / handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="#E7E7E7"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_gravity="center"
        android:text="Withdraw funds"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:textColor="?attr/customTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Hidden Loading Container2 -->
    <LinearLayout
        android:id="@+id/layout_user_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:textColor="?attr/customTextColor"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipient ID"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/customer_id_edit"
            android:textColor="?attr/customTextColor"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColorHint="#CDCBCB"
            android:backgroundTint="#CDCBCB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:textColor="?attr/customTextColor"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code:"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/amount_edit"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="?attr/customTextColor"
            android:layout_marginTop="10dp"
            android:textColorHint="#CDCBCB"
            android:backgroundTint="#CDCBCB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Search Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:text="OK"
            android:textSize="16sp"
            android:textAlignment="center"
            app:cornerRadius="12dp"
            android:textAllCaps="false"
            android:textColor="?attr/customTextColor"
            android:backgroundTint="?attr/customButtonColor" />
    </LinearLayout>
</LinearLayout>