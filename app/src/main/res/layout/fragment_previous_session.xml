<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/cardBackgroundColor"
    android:orientation="vertical">

    <!-- Session Block with triangle toggle and balance section -->
    <FrameLayout
        android:id="@+id/sessionBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom"
        android:padding="16dp">

        <!-- Stack content vertically -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Session Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:id="@+id/sessionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session"
                    android:textColor="?attr/customTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <!-- Clock + Label + Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Clock Icon -->
                        <ImageView
                            android:id="@+id/clockIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_clock"
                            android:layout_marginEnd="6dp"
                            app:tint="?attr/customIconTint" />

                        <!-- Label + Time stacked -->
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/sessionStarted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Session started"
                                android:textColor="?attr/customTextColor5"
                                android:textSize="14sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/sessionStartTimeDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15:50, 18.08.2025"
                                android:textColor="?attr/customTextColor"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">


                        <!-- Label + Time stacked -->
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_gravity="end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Session ended"
                                android:textColor="?attr/customTextColor5"
                                android:textSize="14sp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/sessionEndedTimeDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15:50, 18.08.2025"
                                android:textColor="?attr/customTextColor"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!-- Hidden Balance Section -->
            <LinearLayout
                android:id="@+id/balanceSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:visibility="gone">

                <!-- Session ID Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp">

                    <!-- Icon -->
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_season"
                        android:layout_marginEnd="8dp"
                        app:tint="?attr/customIconTint" />

                    <!-- Vertical Layout with two TextViews -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sessionIdLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Session ID"
                            android:textColor="?attr/customTextColor5"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/sessionIdValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?attr/customTextColor"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:textColor="?attr/customTextColor"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>



                <!-- Start Balance -->

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <!-- Clock + Label + Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Clock Icon -->
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_start_balance"
                            android:layout_marginEnd="8dp"
                            app:tint="?attr/customIconTint" />

                        <!-- Label + Time stacked -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/startBalanceLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Session start balance"
                                android:textColor="?attr/customTextColor5"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/startBalanceValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 ৳"
                                android:textColor="?attr/customTextColor"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">


                        <!-- Label + Time stacked -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/endedBalanceLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Session end balance"
                                android:textColor="?attr/customTextColor5"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_gravity="end"
                                android:id="@+id/endedBalanceValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 ৳"
                                android:textColor="?attr/customTextColor"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>




                <!-- Deposits & Paid Out -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Deposits received -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_deposit"
                            android:layout_marginEnd="8dp"
                            app:tint="?attr/customIconTint" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/depositLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Deposits received"
                                android:textColor="#779f2d"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/depositValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 ৳"
                                android:textColor="?attr/customTextColor"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Amount paid out -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/paidOutLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount paid out"
                            android:textColor="#FF4444"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/paidOutValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="0 ৳"
                            android:textColor="#FF4444"
                            android:textSize="14sp"
                            />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Triangle Toggle Button -->
        <ImageView
            android:id="@+id/triangleToggle"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_triangle"
            android:layout_gravity="top|end"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="?attr/customIconTint" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/emptyIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_chart_zero"
            android:layout_marginBottom="16dp"
            app:tint="?attr/customIconTint" />

        <TextView
            android:id="@+id/emptyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No transactions"
            android:textColor="?attr/customTextColor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/emptySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add EPOS transactions to see them"
            android:textColor="?attr/customTextColor5"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
